using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.UI;

public class Liv : MonoBehaviour
{
    [SerializeField] private Image livSpriteRenderer;
    public float maxFillLevel = 3f;
    public float fillLevel;
    private Death death;

    public delegate void FillLevelChanged(float newFillLevel);
    public event FillLevelChanged OnFillLevelChanged;

    void Start()
    {
        fillLevel = maxFillLevel;
        UpdateLivSprite();
        death = FindAnyObjectByType<Death>();

        if (OnFillLevelChanged != null)
        {
            OnFillLevelChanged(fillLevel);
        }
    }

    public void DecreaseFillLevel(float amount)
    {
        fillLevel -= amount;
        if (fillLevel <= 0)
        {
            fillLevel = 0;
            death.Die();
        }
        UpdateLivSprite();

        if(OnFillLevelChanged != null)
        {
            OnFillLevelChanged(fillLevel);
        }
    }

    private void UpdateLivSprite()
    {
        float fillAmount = fillLevel / maxFillLevel;
        livSpriteRenderer.fillAmount = fillAmount;
    }
}
